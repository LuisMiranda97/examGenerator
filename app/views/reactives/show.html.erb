<div class="container-fluid-1 bg-1 text-left">
  <h1>Reactivo <%= @reactive.id %></h1>
</div>

<div class="d-flex flex-row-reverse mt-4">
  <%= link_to "Inicio", root_path, :class => "btn btn-info btn-lg mx-2" %>
  
  <%= link_to "Mis reactivos", reactives_path, :class => "btn btn-info btn-lg mx-2" %>

  <%= link_to "Crear reactivo", new_reactive_path, :class => "btn btn-info btn-lg mx-2" %>
</div>

<div class="container bg-2 text-center mt-5">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Materia</th>
        <th scope="col">Tema</th>
        <th scope="col">Pregunta</th>
        <th scope="col">Tipo</th>
        <th scope="col">Opcion 1</th>
        <th scope="col">Opcion 2</th>
        <th scope="col">Opcion 3</th>
        <th scope="col">Opcion 4</th>
        <th scope="col">Respuesta</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @reactive.topic.subject.name_subject %></td>
        <td><%= @reactive.topic.name_topic %></td>
        <td><%= @reactive.text %></td>
        <td><%= @reactive.reactive_type %></td>
        <% @reactive.options.each do |option| %>
                <td><%= option.answer %></td>
            <% end %>
        <td><%= link_to 'Editar', edit_reactive_path(@reactive) %></td>
        <td><%= link_to 'Eliminar', @reactive, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    </tbody>
  </table>
</div>