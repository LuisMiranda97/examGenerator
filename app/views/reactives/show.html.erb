<div class="container-fluid-1 bg-1 text-left">
  <h1>Reactivo <%= @reactive.id %></h1>
</div>

<div class="d-flex flex-row-reverse mt-4">
<%= link_to "Inicio", root_path,
      :class => "btn btn-info btn-lg mx-2", :method => :get %>
</div>

<div class="container bg-2 text-center mt-5">
  <div class="row">
    <div class="col-sm">
        Topic:
        <%= @reactive.topic.name_topic %>
        <br>
        Pregunta:
        <%= @reactive.text %>
        <br>
        Tipo:
        <%= @reactive.reactive_type %>
        <br>
        <div row>
            <h5> Respuestas </h5>
            <% @reactive.options.each do |option| %>
                Respuesta:
                <%= option.answer %>
                Correcta?
                <%= option.isAnswer ? 'si' : 'no' %>
                <br>
            <% end %>
        </div>
    </div>  
  </div>
</div>

<%= link_to 'Edit', edit_reactive_path(@reactive) %> |
<%= link_to 'Back', reactives_path %>