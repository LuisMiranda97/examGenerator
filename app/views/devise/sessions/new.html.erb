<div class="container-fluid-1 bg-1 text-left">
  <h1>Exam Generator</h1>


</div>

<div class="container col-12 col-md-6 col-lg-9 text-center p-5">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs mt-4 px-5" style="text-align:left;">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions mb-5 px-5">
    <%= f.submit 'Log in', class: "btn btn-info btn-lg", style: "width: 150px;"%>
  </div>

<% end %>

<%= render "devise/shared/links" %>
</div>