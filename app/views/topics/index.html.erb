<div class="container-fluid-1 bg-1 text-left">
  <h1>Mis temas</h1>
</div>

<div class="d-flex flex-row-reverse mt-4">
<%= link_to "Inicio", root_path,
      :class => "btn btn-info btn-lg mx-2", :method => :get %>
<%= link_to "Agregar tema", new_topic_path,
      :class => "btn btn-info btn-lg mx-2", :method => :get %>
</div>

<div class="container text-left p-5">
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Tema</th>
      <th scope="col">Materia</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.name_topic %>
        <td><%= topic.subject.name_subject %>
        <td><%= link_to 'Mostrar', topic %></td>
        <td><%= link_to 'Editar', edit_topic_path(topic) %></td>
        <td><%= link_to 'Eliminar', topic, method: :delete, 
                                        data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
