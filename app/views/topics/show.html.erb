<div class="container-fluid-1 bg-1 text-left">
  <h1><%= @topic.subject.name_subject %></h1>
</div>

<div class="d-flex flex-row-reverse mt-4">
  <%= link_to "Inicio", root_path, :class => "btn btn-info btn-lg mx-2" %>

  <%= link_to "Mis temas", topics_path, :class => "btn btn-info btn-lg mx-2" %>

  <%= link_to "Crear nuevo", new_topic_path, :class => "btn btn-info btn-lg mx-2" %>
</div>

<div class="container text-left my-3">
    <h2><%= @topic.name_topic %></h2>
  </div>


<div class="container bg-2 text-center mt-4">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Pregunta</th>
        <th scope="col">Formula</th>
        <th scope="col">Tipo</th>
        <th scope="col">Mostrar</th>
        <th scope="col">Editar</th>
        <th scope="col">Eliminar</th>
      </tr>
    </thead>

    <tbody>
    <% @topic.reactives.each do |reactive| %>
        <tr>
          <td><%= reactive.text %></td>
          <td><%= reactive.formula %></td>
          <td><%= reactive.reactive_type %></td>
          <td><%= link_to 'Mostrar', reactive %></td>
          <td><%= link_to 'Editar', edit_reactive_path(reactive) %></td>
          <td><%= link_to 'Eliminar', reactive, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>