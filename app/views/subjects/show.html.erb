<div class="container-fluid-1 bg-1 text-left">
  <h1>Agregar Materia</h1>
</div>

<div class="d-flex flex-row-reverse mt-4">
    <%= link_to "Inicio", root_path, :class => "btn btn-info btn-lg mx-2" %>

    <%= link_to "Agregar Nueva", new_subject_path, :class => "btn btn-info btn-lg mx-2" %>
    
    <%= link_to "Atras", subjects_path, :class => "btn btn-info btn-lg mx-2" %>
</div>

<div class="container bg-2 text-center mt-5">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Materia</th>
        <th scope="col">Editar</th>
        <th scope="col">Eliminar</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @subject.name_subject %></td>
        <td><%= link_to 'Editar', edit_subject_path(@subject) %></td>
        <td><%= link_to 'Eliminar', @subject, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    </tbody>
  </table>
</div>