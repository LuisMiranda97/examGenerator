<h1>Generar Examen</h1>

<div class="d-flex flex-row-reverse">
<%= link_to "Inicio", root_path,
      :class => "btn btn-info btn-lg mx-2", :method => :get %>
</div>

<div class="container bg-2 text-center mt-5">
<%= simple_form_for @exam do |f| %>
  <%= f.input :name_exam, placeholder: 'Nombre del examen', error: 'El nombre es obligatorio' %>
  <%= f.input :id_subject, placeholder: 'Materia', collection: [ "Matemáticas", "Programación", "AMSS"] %>
  <%= f.button :submit, class: "btn btn-info btn-lg mx-2"  %>
<% end %>
</div>