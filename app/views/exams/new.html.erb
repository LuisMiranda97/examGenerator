<div class="container-fluid-1 bg-1 text-left">
  <h1>Generar Examen</h1>
</div>

<div class="d-flex flex-row-reverse mt-4">
<%= link_to "Inicio", root_path,
      :class => "btn btn-info btn-lg mx-2", :method => :get %>
</div>

<div class="container bg-2 text-center mt-5">
  <div class="row">
    <div class="col-sm">
      <%= simple_form_for @exam do |f| %>
        <%= f.input :name_exam, label: "Nombre del examen", placeholder: 'Nombre del examen', error: 'El nombre es obligatorio' %>
        <%= f.association :subject, label: "Materia", placeholder: 'Materia', error: 'La materia es obligatoria' %>
        <%= f.button :submit, class: "btn btn-info btn-lg mx-2"  %>
      <% end %>
    </div>  
  </div>
</div>

